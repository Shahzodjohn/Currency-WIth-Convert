<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Currency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a href="/home/Homepage"><img src="~/Images/logo.1d1f1764.svg" alt="Logo" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">


                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link active" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; margin-left:50px; color: black;" href="~/home/deposit">Депозит</a>

                        <a class="nav-link active" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color: black;" href="~/home/Converting">Ковертер валют</a>

                        <a class="nav-link active" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color: black;" href="~/home/index">Валюта на сегодня</a>

                    }




                </div>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Введите запрос" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Искать</button>
                </form>

                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-link active" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;color: black;" href="~/Sign/Logout">Выход</a>
                }
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="nav-link active" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;color: black;" href="~/Sign/Login">Войти</a>

                    <a class="nav-link active" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color: black;" href="~/Sign/SignUp">Зарегистрироватся</a>

                }
            </div>
        </nav>
    </header>

            @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Currency - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
