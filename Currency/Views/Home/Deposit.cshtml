<div class="h-100 d-flex justify-content-center align-items-center w-100">
    <div class="text-danger" asp-validation-summary="All">
    </div>
  
    <div class="mt-5">
        <form asp-action="Deposit" asp-controller="Home" method="post">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Депозит</h5>
                    <div class="form-group">
                        <label>Валюта</label>
                        <div class="form-group">
                            <select class="form-select form-control" name="charcode">
                                <option selected>Выберите валюту</option>
                                <option value="USD">Доллар США</option>
                                <option value="TJS">Таджикский сомони</option>
                            </select>
                            <label>Выберите сумму депозита</label>
                            <input class="form-control" type="number" name="amount" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Посчитать</button>

                    <p><strong> </strong> </p>

                    <p><strong> </strong>  <strong></strong> </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col"> Валюта </th>
                                <th > Ваш вклад </th>
                                <th > Cумма с процентами </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td> @ViewBag.CharCode </td>
                                <td> @ViewBag.Amount </td>
                                <td>
                                    @ViewBag.Result
                                    @if (ViewBag.CharCode == "USD")
                                    {
                                        <span>USD</span>
                                    }
                                    @if (ViewBag.CharCode == "TJS")
                                    {
                                        <span>TJS</span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>